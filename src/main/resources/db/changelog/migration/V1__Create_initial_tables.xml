<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
    http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.17.xsd">

    <changeSet id="1" author="franco">
        <createTable tableName="users">
            <column name="id" type="BIGINT" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="username" type="VARCHAR(50)">
                <constraints nullable="false" unique="true"/>
            </column>
            <column name="password" type="VARCHAR(255)">
                <constraints nullable="false"/>
            </column>
            <column name="email" type="VARCHAR(255)">
                <constraints nullable="false" unique="true"/>
            </column>
            <column name="enable" type="BOOLEAN" defaultValueBoolean="true">
                <constraints nullable="false"/>
            </column>
            <column name="role" type="VARCHAR(20)">
                <constraints nullable="false"/>
            </column>
            <column name="external_id" type="VARCHAR(36)"/>
            <column name="deleted_at" type="TIMESTAMP"/>
            <column name="created_at" type="TIMESTAMP" defaultValueComputed="CURRENT_TIMESTAMP"/>
            <column name="updated_at" type="TIMESTAMP" defaultValueComputed="CURRENT_TIMESTAMP"/>
        </createTable>

        <createTable tableName="trainers">
            <column name="id" type="BIGINT" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="name" type="VARCHAR(255)">
                <constraints nullable="false"/>
            </column>
            <column name="email" type="VARCHAR(255)">
                <constraints nullable="false"/>
            </column>
            <column name="specialty" type="VARCHAR(255)"/>
            <column name="user_id" type="BIGINT">
                <constraints unique="true"/>
            </column>
        </createTable>
        <addForeignKeyConstraint baseTableName="trainers" baseColumnNames="user_id"
                                 referencedTableName="users" referencedColumnNames="id"
                                 constraintName="fk_trainers_user"/>

        <createTable tableName="members">
            <column name="id" type="BIGINT" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="name" type="VARCHAR(255)">
                <constraints nullable="false"/>
            </column>
            <column name="email" type="VARCHAR(255)">
                <constraints nullable="false"/>
            </column>
            <column name="age" type="INT"/>
            <column name="weight" type="DOUBLE"/>
            <column name="height" type="DOUBLE"/>
            <column name="user_id" type="BIGINT">
                <constraints unique="true"/>
            </column>
            <column name="trainer_id" type="BIGINT"/>
        </createTable>
        <addForeignKeyConstraint baseTableName="members" baseColumnNames="user_id"
                                 referencedTableName="users" referencedColumnNames="id"
                                 constraintName="fk_members_user"/>
        <addForeignKeyConstraint baseTableName="members" baseColumnNames="trainer_id"
                                 referencedTableName="trainers" referencedColumnNames="id"
                                 constraintName="fk_members_trainer"/>

        <!-- Índices sugeridos -->
        <createIndex tableName="users" indexName="idx_users_username">
            <column name="username"/>
        </createIndex>
        <createIndex tableName="users" indexName="idx_users_email">
            <column name="email"/>
        </createIndex>
        <createIndex tableName="users" indexName="idx_users_external_id">
            <column name="external_id"/>
        </createIndex>
        <createIndex tableName="users" indexName="idx_users_deleted_at">
            <column name="deleted_at"/>
        </createIndex>
        <createIndex tableName="users" indexName="idx_users_enable">
            <column name="enable"/>
        </createIndex>
    </changeSet>
</databaseChangeLog>
